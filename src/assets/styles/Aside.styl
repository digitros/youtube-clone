.Aside
    background: #fff
    height calc(100vh - 60px)
    color: #606060
    font-size: 10px
    font-weight: 400
    line-height: 14px
    display: flex
    flex-direction: column
    position fixed
    width: 80px
    z-index 5
    margin-top: 60px

.Aside__buttons
    width: 100%
    height 70px
    display: flex
    flex-direction: column
    justify-content: center
    align-items: center
    cursor: pointer
    &:hover
        background: #dedbdb
    & svg 
        width: 24px

.Aside__active
    background: #fff
    height calc(100vh - 60px)
    color: #606060
    font-size: 10px
    font-weight: 400
    line-height: 14px
    display: flex
    flex-direction: column
    position fixed
    width: 240px
    z-index 5
    margin-top: 60px
    overflow-y: scroll
    scrollbar-width: thin
    scrollbar-color: #E0E0E0 #fff
    &--buttons
        width: 100%
        height 40px
        display: flex
        flex-direction: row
        justify-content: flex-start
        align-items: center
        cursor: pointer
        &:hover
            background: #dedbdb
        & svg 
            width: 24px
            margin-left: 30px
        & p 
            margin-left: 30px
            font-size: 14px
            font-weight: 500
            line-height: 18px
        & .pic
            margin-left: 30px
    &--section
        border-bottom: 1px solid #E5E5E5
        & h3 
            margin-left 30px
            text-transform: uppercase
    &--footer
        display: flex
        flex-direction: column
        margin-left 30px
        margin-top: 20px
        & span 
            font-size: 13px
            font-weight: 600
            line-height: 18px
        & .copy
            margin-bottom: 30px
    &::-webkit-scrollbar 
        width: 8px
    &::-webkit-scrollbar-thumb
        background-color: #E0E0E0